  component "ui/progress.tsx::Progress" as Progress
  component "ui/switch.tsx::Switch" as Switch
  component "ui/alert.tsx::Alert" as Alert
  component "ui/alert.tsx::AlertTitle" as AlertTitle
  component "ui/alert.tsx::AlertDescription" as AlertDescription
}

